#!/bin/bash

export PATH=$PATH:$HOME/work/github/dotfiles/bin

# Minc widgets from: https://github.com/BIC-MNI/minc-widgets
export PATH=$PATH:/scratch/minc-widgets/mincbigaverage:/scratch/minc-widgets/mincnorm:/scratch/minc-widgets/volflip:/scratch/minc-widgets/nlpfit:/scratch/minc-widgets/xfmflip:/scratch/minc-widgets/volsymm:/scratch/minc-widgets/volalign:/scratch/minc-widgets/volcentre:/scratch/minc-widgets/xfmavg

alias a='ack-grep --pager="less -R" --color-match=red --color-lineno=black --color-filename=yellow'

alias cdchecker='cd /home/carlo/work/github/checker'
alias cdcliyesod='cd /home/carlo/work/github/cli-yesod-blog/blog/'
alias cdghcimportedfrom='cd /home/carlo/work/github/ghc-imported-from/'


alias ci='cabal install --haddock-hyperlink-source'

alias tm='$HOME/work/github/dotfiles/bin/tray_and_gnome_session.sh &> /dev/null; $HOME/marble.sh; echo "tray and marble"'
alias tu='$HOME/work/github/dotfiles/bin/tray_and_gnome_session.sh &> /dev/null; $HOME/unmarble.sh; echo "tray and unmarble"'

alias mm='$HOME/marble.sh'
alias um='$HOME/unmarble.sh'

alias ls='ls --color=auto'
alias d='ls -lh'

alias f='find . -iname '

export EDITOR=vim

# All history forever!
export HISTSIZE=20000
shopt -s histappend
export HISTTIMEFORMAT="%F %T "
export PROMPT_COMMAND='history -a'

# Bash completion
if [ -f /etc/bash_completion ]; then
. /etc/bash_completion
fi

# Heaps of colours, copied from http://mediadoneright.com/content/ultimate-git-ps1-bash-prompt

# Reset
Color_Off="\[\033[0m\]"       # Text Reset

# Regular Colors
Black="\[\033[0;30m\]"        # Black
Red="\[\033[0;31m\]"          # Red
Green="\[\033[0;32m\]"        # Green
Yellow="\[\033[0;33m\]"       # Yellow
Blue="\[\033[0;34m\]"         # Blue
Purple="\[\033[0;35m\]"       # Purple
Cyan="\[\033[0;36m\]"         # Cyan
White="\[\033[0;37m\]"        # White

# Bold
BBlack="\[\033[1;30m\]"       # Black
BRed="\[\033[1;31m\]"         # Red
BGreen="\[\033[1;32m\]"       # Green
BYellow="\[\033[1;33m\]"      # Yellow
BBlue="\[\033[1;34m\]"        # Blue
BPurple="\[\033[1;35m\]"      # Purple
BCyan="\[\033[1;36m\]"        # Cyan
BWhite="\[\033[1;37m\]"       # White

# Underline
UBlack="\[\033[4;30m\]"       # Black
URed="\[\033[4;31m\]"         # Red
UGreen="\[\033[4;32m\]"       # Green
UYellow="\[\033[4;33m\]"      # Yellow
UBlue="\[\033[4;34m\]"        # Blue
UPurple="\[\033[4;35m\]"      # Purple
UCyan="\[\033[4;36m\]"        # Cyan
UWhite="\[\033[4;37m\]"       # White

# Background
On_Black="\[\033[40m\]"       # Black
On_Red="\[\033[41m\]"         # Red
On_Green="\[\033[42m\]"       # Green
On_Yellow="\[\033[43m\]"      # Yellow
On_Blue="\[\033[44m\]"        # Blue
On_Purple="\[\033[45m\]"      # Purple
On_Cyan="\[\033[46m\]"        # Cyan
On_White="\[\033[47m\]"       # White

# High Intensty
IBlack="\[\033[0;90m\]"       # Black
IRed="\[\033[0;91m\]"         # Red
IGreen="\[\033[0;92m\]"       # Green
IYellow="\[\033[0;93m\]"      # Yellow
IBlue="\[\033[0;94m\]"        # Blue
IPurple="\[\033[0;95m\]"      # Purple
ICyan="\[\033[0;96m\]"        # Cyan
IWhite="\[\033[0;97m\]"       # White

# Bold High Intensty
BIBlack="\[\033[1;90m\]"      # Black
BIRed="\[\033[1;91m\]"        # Red
BIGreen="\[\033[1;92m\]"      # Green
BIYellow="\[\033[1;93m\]"     # Yellow
BIBlue="\[\033[1;94m\]"       # Blue
BIPurple="\[\033[1;95m\]"     # Purple
BICyan="\[\033[1;96m\]"       # Cyan
BIWhite="\[\033[1;97m\]"      # White

# High Intensty backgrounds
On_IBlack="\[\033[0;100m\]"   # Black
On_IRed="\[\033[0;101m\]"     # Red
On_IGreen="\[\033[0;102m\]"   # Green
On_IYellow="\[\033[0;103m\]"  # Yellow
On_IBlue="\[\033[0;104m\]"    # Blue
On_IPurple="\[\033[10;95m\]"  # Purple
On_ICyan="\[\033[0;106m\]"    # Cyan
On_IWhite="\[\033[0;107m\]"   # White

# Various variables you might want for your PS1 prompt instead
Time12h="\T"
Time12a="\@"
PathShort="\w"
PathFull="\W"
NewLine="\n"
Jobs="\j"

# PS1 snippet adapted from: http://mediadoneright.com/content/ultimate-git-ps1-bash-prompt

export PS1='$(if [ $? == 0 ]; then echo "'$BIGreen'✓'$Color_Off'"; else echo "'$BIRed'✗'$Color_Off'"; fi) '$IBlack$Time12h$Color_Off' \u@\h$(export LASTSTATUS=$?; git branch &>/dev/null;\
if [ $? -eq 0 ]; then \
  echo "$(echo `git status` | grep "nothing to commit" > /dev/null 2>&1; \
  if [ "$?" -eq "0" ]; then \
    # @4 - Clean repository - nothing to commit
    echo "'$Green'"$(__git_ps1 " (%s)"); \
  else \
    # @5 - Changes to working tree
    echo "'$IRed'"$(__git_ps1 " {%s}"); \
  fi) '$BBlack$PathShort$Color_Off' \$ "; \
else \
  # @2 - Prompt when not in GIT repo
  echo " '$Black$PathShort$Color_Off' \$ "; \
fi)'



# Coloured man pages.
# https://lists.samba.org/archive/linux/2014-February/032873.html
# http://linuxtidbits.wordpress.com/2009/03/23/less-colors-for-man-pages/
man() {
    env \
        LESS_TERMCAP_mb=$(printf "\e[1;31m") \
        LESS_TERMCAP_md=$(printf "\e[1;38;5;74m") \
        LESS_TERMCAP_me=$(printf "\e[0m") \
        LESS_TERMCAP_se=$(printf "\e[0m") \
        LESS_TERMCAP_so=$(printf "\e[1;38;5;246m") \
        LESS_TERMCAP_ue=$(printf "\e[0m") \
        LESS_TERMCAP_us=$(printf "\e[04;38;5;146m") \
            man "$@"
}



# http://ro-che.info/articles/2014-03-05-cabal-sandbox-tips.html
. ~/work/github/ghc_sandbox/ghc_sandbox.sh

